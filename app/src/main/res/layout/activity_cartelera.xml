<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Inicio.CarteleraActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img07"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_weight="2"
                    android:onClick="startAvatar2"
                    app:srcCompat="@drawable/img_avatar2" />

                <ImageView
                    android:id="@+id/img09"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_weight="2"
                    android:onClick="startJurasicWorl"
                    app:srcCompat="@drawable/img_jurasicworl" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img03"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_weight="2"

                    app:srcCompat="@drawable/img_cosasdeamigos" />

                <ImageView
                    android:id="@+id/img04"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_weight="2"

                    app:srcCompat="@drawable/img_bestia" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img05"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_weight="2"

                    app:srcCompat="@drawable/img_dinoking" />

                <ImageView
                    android:id="@+id/img06"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_weight="2"

                    app:srcCompat="@drawable/img_elvispresley" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img02"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_weight="2"

                    app:srcCompat="@drawable/img_asesinossinmemoria" />

                <ImageView
                    android:id="@+id/img08"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_weight="2"

                    app:srcCompat="@drawable/img_festivalnickjr" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/img01"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_weight="2"
                    app:srcCompat="@drawable/img_666" />

                <ImageView
                    android:id="@+id/img10"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_weight="2"

                    app:srcCompat="@drawable/img_lightyear" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img11"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_weight="2"

                    app:srcCompat="@drawable/img_thortrueno" />

                <ImageView
                    android:id="@+id/img12"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_weight="2"

                    app:srcCompat="@drawable/img_minion" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>